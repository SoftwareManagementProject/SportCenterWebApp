@model List<CartItem>
@{
}
<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Alışveriş Sepeti</h2>
            <hr />
            @if (Model.Count() > 0)
            {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Packet Name</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var cartItem in Model)
                        {
                                    <tr>
                                        <td></td>
                                        <td>@cartItem.Packet.PacketType</td>
                                        <td>@cartItem.Packet.PacketPrice<i class="fa-solid fa-turkish-lira-sign"></i></td>
                                        <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart", new { cartItemId = cartItem.CartItemId }))
                                    {
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa-solid fa-trash"></i>
                                            Delete
                                        </button>
                                    }
                                        </td>
                                    </tr>
                        }

                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3"></td>
                                <td>@ViewBag.TotalPrice <i class="fa-solid fa-turkish-lira-sign"></i></td>

                            </tr>
                        </tfoot>
                    </table>
                    <div class="text-center">
                        <a href="/Home" class="btn btn-outline-primary"><i class="fa-solid fa-arrow-left"></i> Alışverişe devam et</a>
                        <a href="/Checkout" class="btn btn-outline-warning ms-3"><i class="fa-solid fa-circle-check"></i> Alışverişi Tamamla</a>

                    </div>

            }
            else
            {
                    <div class="alert alert-warning" role="alert">
                        <i class="fa-solid fa-triangle-exclamation"></i>
                        Alışveriş sepetiniz Boş!
                    </div>
            }
        </div>
    </div>
</div>
<div class="emptyDiv" style="margin-top:210px"></div>
